<!doctype html>
<html lang="en">
	<head>
		<title> Spam Review Detection </title>

		 {{> includes}}

	</head>
	<body>

	<div class="container">
		{{> header}}

			{{#data}}
			<span id="pid_save" style="display:none">{{ pid }}</span>
				<h2 class="page-header">
					<span class="glyphicon glyphicon-tags"></span> 
					&nbsp{{ pname }} 
					<small>#{{ pid }}</small>
				</h2>

				<div class="row">
					<div class="col-md-4">
						
						<h3>Product Reliability</h3>
						<div class="big_score alert">
							{{rel}}
						</div>
					</div>

					<div class="col-md-8"> 
						<h3>Product Reviews</h3>
			
						<table class="table table-hover">
						
							<th id="sort_rid" class="sortable" > Review id </th>
							<th id="sort_uid" class="sortable"> User id </th>
							<th id="sort_time" class="sortable"> Date </th>
							<th id="sort_score" class="sortable"> Score </th>
							<th id="sort_hon" class="sortable" > Honesty </th>

							<tbody id="product_list">
							</tbody>

						</table>

					{{/data}}

					<ul class="pager">
  						<li id="show_more" class="clickable_gen"><a>Load More</a></li>
					</ul>

					</div>
				</div>

				{{=<% %>=}}
					<script id="row-template" type="text/x-handlebars-template">
					{{#tab}}
						<tr class="clickable_row" data-url="/review/{{rid}}">
							<td>{{rid}}</td>
							<td>{{uid}}</td>
							<td>{{date}}</td>
							<td>{{score}}</td>
							<td class="score_field">{{hon}}</td>
						</tr>
					{{/tab}}
					</script>
				<%={{ }}=%>
			
			{{> footer }}
		</div>
		<script type="text/javascript" src="/js/product.js"></script>
		<script type="text/javascript">
			bigScoreColor();

		</script>
	</body>
</html>




				

