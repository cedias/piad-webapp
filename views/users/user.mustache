<!doctype html>
<html lang="en">
	<head>
		<title> Spam Review Detection </title>

		 {{> includes}}

	</head>
	<body>

		<div class="container">
			{{> header}}

			{{#infoUser}}
				<span id="uid_save" style="display:none">{{ uid }}</span>
				<h2 class="page-header">
					<span class="glyphicon glyphicon-user"></span> 
					&nbsp{{ uname }} 
					<small>#{{ uid }}</small>
				</h2>

				<div class="row">
					<div class="col-md-4">
						
						<h3>User Trustiness</h3>
						<div class="big_score alert">
							{{tru}}
						</div>
					</div>
			{{/infoUser}}
					<div class="col-md-8"> 
						<h3>User Reviews</h3>
			
						<table class="table table-hover">
						
							<th id="sort_rid" class="sortable" > Review id </th>
							<th id="sort_pid" class="sortable"> Product id </th>
							<th id="sort_time" class="sortable"> Date </th>
							<th id="sort_score" class="sortable"> Score </th>
							<th id="sort_hon" class="sortable" > Honesty </th>

							<tbody id="review_list">
							</tbody>

						</table>
					</div>

					<ul class="pager">
  						<li id="show_more" class="clickable_gen"><a>Load More</a></li>
					</ul>
				</div>

				{{=<% %>=}}
					<script id="row-template" type="text/x-handlebars-template">
					{{#tab}}
						<tr class="clickable_row" data-url="/review/{{rid}}">
							<td>{{rid}}</td>
							<td>{{pid}}</td>
							<td>{{date}}</td>
							<td>{{score}}</td>
							<td class="score_field">{{hon}}</td>
						</tr>
					{{/tab}}
					</script>
				<%={{ }}=%>

			{{> footer }}
		<script type="text/javascript" src="/js/user.js"></script>
		<script type="text/javascript">
			bigScoreColor();
		</script>
	</body>
</html>
